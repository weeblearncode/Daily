#include <string>

std::string createPhoneNumber(const int arr [10]){
std::stringstream ss ;  
  ss << "(";
  
    for (int i = 0 ;i<3;++i)
  {ss << arr[i];}
  ss << ") ";
  
    for (int i = 3 ; i < 6 ; ++i)
  {ss<< arr[i];}
  ss << "-";
  
    for (int i = 6 ; i < 10;++i)
   {ss<< arr[i];}
  
  return ss.str() ; 
}
